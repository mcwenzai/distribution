page {
  min-height: 100%;
  background: #FBF9FD;
}
.verificaiton {
  width: 100%;
}
.verificaiton .navigation-bar {
  width: 100%;
  height: 88rpx;
  background: #FFFFFF;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.verificaiton .navigation-bar .bar {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
}
.verificaiton .navigation-bar .bar .number {
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  background: #DDDDDD;
  border-radius: 50%;
  font-size: 22rpx;
  font-weight: bold;
  color: #FFFFFF;
}
.verificaiton .navigation-bar .bar .name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-left: 8rpx;
}
.verificaiton .navigation-bar .active {
  border-bottom: 8rpx solid var(--themeColor);
}
.verificaiton .navigation-bar .active .number {
  background: var(--themeColor);
}
.verificaiton .navigation-bar .active .name {
  color: var(--themeColor);
}
.verificaiton .membership-fee {
  width: 100%;
  min-height: 100%;
  background: #fff;
  margin-top: 10rpx;
}
.verificaiton .membership-fee .tips {
  width: 100%;
  height: 140rpx;
  background: #FCD0A5;
}
.verificaiton .membership-fee .tips .introduce {
  width: 674rpx;
  height: 95rpx;
  font-size: 22rpx;
  font-weight: 500;
  color: #95490E;
  padding: 22rpx 39rpx;
}
.verificaiton .membership-fee .certification-fee {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.verificaiton .membership-fee .certification-fee .imk {
  width: 140rpx;
  height: 146rpx;
  margin-top: 89rpx;
}
.verificaiton .membership-fee .certification-fee .imk image {
  width: 100%;
}
.verificaiton .membership-fee .certification-fee .cost {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-top: 48rpx;
}
.verificaiton .membership-fee .certification-fee .price {
  font-size: 60rpx;
  font-weight: 800;
  color: var(--themeColor);
  margin-top: 39rpx;
}
.verificaiton .membership-fee .certification-fee .price .number {
  font-size: 90rpx;
}
.verificaiton .membership-fee .certification-fee .pay {
  width: 640rpx;
  height: 84rpx;
  line-height: 84rpx;
  text-align: center;
  background: var(--themeColor);
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #FBF9FD;
  margin-top: 140rpx;
  margin-bottom: 260rpx;
}
.verificaiton .result {
  width: 100%;
  height: 1106rpx;
  background: #fff;
  margin-top: 10rpx;
}
.verificaiton .result .examine {
  padding-top: 30rpx;
  margin-left: 34rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}
.verificaiton .result .progress-bar {
  margin-top: 50rpx;
  margin-left: 50rpx;
}
.verificaiton .result .progress-bar .ckaser {
  display: flex;
}
.verificaiton .result .progress-bar .ckaser .bar {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.verificaiton .result .progress-bar .ckaser .bar .spot {
  width: 30rpx;
  height: 30rpx;
  background: var(--themeColor);
  border-radius: 50%;
}
.verificaiton .result .progress-bar .ckaser .bar .success {
  background: #BBBBBB;
}
.verificaiton .result .progress-bar .ckaser .bar .line {
  width: 1rpx;
  height: 130rpx;
  background: #BBBBBB;
}
.verificaiton .result .progress-bar .ckaser .details {
  flex: 6;
  display: flex;
  flex-direction: column;
}
.verificaiton .result .progress-bar .ckaser .details .submit {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--themeColor);
}
.verificaiton .result .progress-bar .ckaser .details .after {
  color: #BBBBBB;
}
.verificaiton .result .progress-bar .ckaser .details .reasons {
  font-size: 26rpx;
  font-weight: 500;
  color: #666;
  margin-top: 10rpx;
}
.verificaiton .result .progress-bar .ckaser .details .fail {
  color: #F94B4B;
}
.verificaiton .result .progress-bar .ckaser .details .time {
  font-size: 26rpx;
  font-weight: 500;
  color: #BBBBBB;
  margin-top: 10rpx;
}
.verificaiton .result .complete {
  width: 640rpx;
  height: 84rpx;
  line-height: 84rpx;
  text-align: center;
  background: var(--themeColor);
  border-radius: 40rpx;
  margin-top: 100rpx;
  margin-left: 55rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #FBF9FD;
}
