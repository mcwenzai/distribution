/* pages/login/login.wxss */
.logo-one{
  display: block;
 width: 171rpx;
 height: 171rpx;
 margin:35rpx auto 34rpx
}
.logo-two{
  display: block;
 width: 330rpx;
 height: 34rpx;
 margin:0 auto;
}
.content{
  width: 660rpx;
  height: 728rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 12rpx 0px rgba(75, 106, 249, 0.24);
  border-radius: 36rpx;
  margin: 44rpx auto 0 ;
  overflow: hidden;
}
.content .title{
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
  margin-top: 78rpx;
}
.content .avatar image{
  display: block;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 0 auto; 
  margin-top: 44rpx;
}
.content  .name{
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  text-align: center;
  padding-top: 24rpx;
}
.content  .want{
  color:var(--themeColor);
  font-size: 24rpx;
  text-align: center;
  margin-top: 10rpx;
}
.content  .next-btn{
  width: 500rpx;
  height: 68rpx;
  background: var(--themeColor);
  border-radius: 34rpx;
  margin: 100rpx auto 0;
  color: #FFFFFF;
  font-size: 28rpx;
  text-align: center;
  line-height: 68rpx;
  
}
.content  .tips{
  display: flex;
  font-size: 22rpx;
  align-items: center;
  justify-content: center;
  margin-top: 18rpx;
  color: #E54148;
}
.content  .tips image{
  flex-shrink: 0;
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx;
}
.content  .have{
  color: var(--themeColor);
  margin: 45rpx;
  font-size: 22rpx;
  text-align: center;
}