  background-color: #FBF9FD;
  overflow: hidden;
}
.password-box{
  height: 100rpx;
  background-color: #ffffff;
  margin-top: 1px;
  padding-left: 40rpx;
}
.plholder{
  color: #BBBBBB;
  font-size: 28rpx;
}
.password-box input{
  display: block;
  height: 100rpx;
}
.password-one{
  margin-top: 16rpx;
}
.btn{
  width: 640rpx;
  height: 84rpx;
  background: var(--themeColor);
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #ffffff;
  text-align: center;
  line-height: 84rpx;
  margin: 80rpx auto 0;
}